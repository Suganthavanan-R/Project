<!-- app/views/products/new.html.erb -->

<%= form_with(model: @product, local: true) do |form| %>
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :price %>
    <%= form.number_field :price %>
  </div>

  <div class="actions">
    <%= form.submit 'Create Product' %>
  </div>
<% end %>
