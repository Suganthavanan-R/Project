<div class="background">
  <div class="main">
    <h3>Input Page</h3>

    <%= form_with url: generate_bill_path, method: :post do |form| %>
      <div class="form-group email-field">
        <%= form.label :customer_email, 'Customer Email' %>
        <%= form.text_field :customer_email, class: 'form-control', required: true %>
      </div>

      <div class="form-group">
        <h3>Bill Section</h3>

        <table id="products-table" class="table table-bordered">

          <tbody>
          <!-- Start with a single row -->
          <tr class="billing-row">
            <td>
              <select name="product_ids[]" class="form-control product-select">
                <option value="" disabled selected>Select a product</option>
                <!-- Populate product options from the product table -->
                <% @products.each do |product| %>
                  <option value="<%= product.id %>"><%= product.name %></option>
                <% end %>
              </select>
            </td>
            <td>
              <%= form.number_field "quantities[]", class: 'form-control', min: 0, required: true, placeholder: 'Enter quantity' %>
            </td>
            <td>
              <!-- Display Delete button only if there's more than one row -->
              <% if @products   .length >= 1 %>
                <button type="reset" class="btn btn-danger btn-remove-row">Delete</button>
              <% end %>
            </td>
          </tr>
          </tbody>
        </table>
        <button type="button" class="btn-add-row">Add New</button>
      </div>
      <div class="form-group">
        <h3>DENOMINATIONS</h3>
        <div class="form-group1">
          <div class="denomination">
            <label for="denomination_500">500</label>
            <input type="number" name="denominations[500]" id="denomination_500" class="form-control denomination-input">
          </div>

          <div class="denomination">
            <label for="denomination_50">50</label>
            <input type="number" name="denominations[50]" id="denomination_50" class="form-control denomination-input">
          </div>

          <div class="denomination">
            <label for="denomination_20">20</label>
            <input type="number" name="denominations[20]" id="denomination_20" class="form-control denomination-input">
          </div>

          <div class="denomination">
            <label for="denomination_10">10</label>
            <input type="number" name="denominations[10]" id="denomination_10" class="form-control denomination-input">
          </div>

          <div class="denomination">
            <label for="denomination_5">5</label>
            <input type="number" name="denominations[5]" id="denomination_5" class="form-control denomination-input">
          </div>

          <div class="denomination">
            <label for="denomination_2">2</label>
            <input type="number" name="denominations[2]" id="denomination_2" class="form-control denomination-input">
          </div>

          <div class="denomination">
            <label for="denomination_1">1</label>
            <input type="number" name="denominations[1]" id="denomination_1" class="form-control denomination-input">
          </div>
        </div>
      </div>
      <div class="vb-1">
        <div class="form-group cash-paid-field">
          <label for="cash_paid">Cash Paid</label>
          <input type="number" name="cash_paid" id="cash_paid" class="form-control">
        </div>
        <div class="button-container three">
          <button type="reset" class="cancel btn btn-secondary">Cancel</button>
          <%= form.submit 'Generate Bill', class: 'btn btn-primary' %>
        </div>
      </div>
      <div class="vb-1">
        <%= link_to 'Products', products_path, class: "custom-button" %>
        <%= link_to 'New Products', new_product_path, class: "custom-button four" %>
      </div>

    <% end %>
  </div>
  <!-- JavaScript to handle adding/removing rows and populating products -->
  <script>
      document.addEventListener('DOMContentLoaded', function () {
          // Get references to the denominations input fields
          const denominationsInputFields = {
              500: document.getElementById('denomination_500'),
              50: document.getElementById('denomination_50'),
              20: document.getElementById('denomination_20'),
              10: document.getElementById('denomination_10'),
              5: document.getElementById('denomination_5'),
              2: document.getElementById('denomination_2'),
              1: document.getElementById('denomination_1'),
          };

          // Get a reference to the "Cash Paid" input field
          const cashPaidInput = document.getElementById('cash_paid');

          // Function to calculate the total cash paid based on denominations
          function calculateCashPaid() {
              let cashPaid = 0;

              // Iterate through the denominations input fields
              Object.keys(denominationsInputFields).forEach(function (value) {
                  const quantity = parseFloat(denominationsInputFields[value].value) || 0;
                  cashPaid += parseFloat(value) * quantity;
              });

              // Update the "Cash Paid" input field with the calculated value
              cashPaidInput.value = cashPaid;
          }

          // Add an event listener to each denomination input field
          Object.keys(denominationsInputFields).forEach(function (denominationValue) {
              const inputField = denominationsInputFields[denominationValue];

              inputField.addEventListener('input', function () {
                  // Calculate the total cash paid when the input field changes
                  calculateCashPaid();
              });
          });
      });

  </script>

  <script>
      // JavaScript to handle adding/removing rows and populating products
      document.addEventListener("DOMContentLoaded", function () {
          const table = document.getElementById("products-table");
          const addRowButton = document.querySelector(".btn-add-row");

          // Function to add a new row
          function addRow() {
              const newRow = table.insertRow(table.rows.length - 1);
              const productIdCell = newRow.insertCell(0);
              const quantityCell = newRow.insertCell(1);
              const deleteCell = newRow.insertCell(2);

              // Product select field
              const productSelect = document.createElement("select");
              productSelect.name = "product_ids[]";
              productSelect.className = "form-control product-select"; // Add a class for product selection
              productIdCell.appendChild(productSelect);


              // Create a default option
              const defaultOption = document.createElement("option");
              defaultOption.value = "";
              defaultOption.textContent = "Select a product";
              productSelect.appendChild(defaultOption);

              // Fetch product options from the JSON endpoint
              fetch("/input/products_json")
                .then(response => response.json())
                .then(data => {
                    data.forEach(product => {
                        const option = document.createElement("option");
                        option.value = product.id;
                        option.textContent = product.name;
                        productSelect.appendChild(option);
                    });
                })
                .catch(error => console.error("Error fetching product data:", error));

              // Quantity input field
              const quantityInput = document.createElement("input");
              quantityInput.type = "number";
              quantityInput.name = "quantities[]";
              quantityInput.className = "form-control";
              quantityInput.placeholder = "Enter quantity"
              quantityInput.min = 0;
              quantityCell.appendChild(quantityInput);

              const deleteButton = document.createElement("button");
              deleteButton.type = "remove";
              deleteButton.className = "btn btn-danger btn-remove-row";
              deleteButton.textContent = "Delete";
              deleteCell.appendChild(deleteButton);

              // Add event listener to delete button
              deleteButton.addEventListener("click", function () {
                  // Remove the row associated with the clicked delete button
                  table.deleteRow(newRow.rowIndex);
              });
          }

          // Function to fetch product options from the backend (similar to your previous code)
          function fetchProductOptions(selectElement) {
              fetch("/products.json")
                  .then(response => response.json())
                  .then(data => {
                      data.forEach(product => {
                          const option = document.createElement("option");
                          option.value = product.id;
                          option.textContent = product.name;
                          selectElement.appendChild(option);
                      });
                  })
                  .catch(error => console.error("Error fetching product data:", error));
          }

          // Add event listener for "Add New" button
          addRowButton.addEventListener("click", addRow);

          // Call fetchProductOptions to populate the dropdown initially
          const initialProductSelect = document.querySelector(".product-select");
          fetchProductOptions(initialProductSelect);
      });

  </script>

</div>
